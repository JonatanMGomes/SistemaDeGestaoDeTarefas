@model SistemaDeGestaoDeTarefas.Models.Tarefa

@{
    Layout = "_Layout";
}


<h1>Detalhes da Tarefa</h1>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ID
        </dd>
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Data de Criação
        </dt>
        <dd class="col-sm-10">
            @Model.DataCriacao
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.ID })" class="btn btn-primary">Editar</a> |
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
</div>
