@model SistemaDeGestaoDeTarefas.Models.Tarefa

<h1>Excluir Tarefa</h1>

<h3>Você tem certeza que deseja excluir esta tarefa?</h3>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ID
        </dd>
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <dt class="col-sm-2">
            Data de Criação
        </dt>
        <dd class="col-sm-10">
            @Model.DataCriacao
        </dd>
    </dl>
</div>
<div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
    </form>
</div>
