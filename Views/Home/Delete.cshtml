@model SistemaDeGestaoDeTarefas.Models.Tarefa

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="mb-4">Excluir Tarefa</h1>
    <h3 class="text-danger">Você tem certeza que deseja excluir esta tarefa?</h3>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Titulo</h4>
            <p class="card-text">
                <strong>ID:</strong> @Model.ID<br />
                <strong>Descrição:</strong> @Model.Descricao<br />
                <strong>Status:</strong> @Model.Status<br />
                <strong>Data de Criação:</strong> @Model.DataCriacao
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Voltar</a>
    </form>
</div>
